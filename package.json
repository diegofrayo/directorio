{
  "name": "directorio-armenia",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --ext .ts,.tsx --fix",
    "lint:data-scripts": "eslint \"src/**/*.js\" -c .eslintrc-node --fix",
    "style": "prettier --write \"src/**/*.{ts,tsx}\"",
    "data:approve-business": "node src/scripts/approve-business.js",
    "data:clean-data": "node src/scripts/clean-data.js",
    "data:update-categories": "node src/scripts/update-categories.js"
  },
  "dependencies": {
    "firebase": "^7.15.4",
    "formik": "^2.1.4",
    "next": "9.4.4",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-ga": "^3.0.0",
    "tailwindcss": "^1.4.6",
    "uuid": "^8.2.0"
  },
  "devDependencies": {
    "@types/node": "^14.0.13",
    "@types/react": "^16.9.41",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "babel-eslint": "^10.1.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.3.1",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "typescript": "^3.9.5",
    "yargs": "^15.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run lint:data-scripts && yarn build"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
